<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkin">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="55dp"


        android:background="#122620"
        android:src="@drawable/logotop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:layout_width="329dp"
        android:layout_height="558dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="147dp"
            android:layout_height="61dp"
            android:gravity="center"
            android:text="Name"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="147dp"
            android:layout_height="61dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Room Type"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="147dp"
            android:layout_height="61dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Room No."
            android:textColor="#000000" />

        <TextView
            android:id="@+id/name_cin"
            android:layout_width="181dp"
            android:layout_height="61dp"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/room_type_cin"
            android:layout_width="181dp"
            android:layout_height="61dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/room_no_cin"
            android:layout_width="181dp"
            android:layout_height="61dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="450dp"
            android:background="#FFE55C"
            android:text="CHECK OUT"
            android:textColor="#000000"
            app:backgroundTint="#FFE55C" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_marginTop="220dp"
            app:srcCompat="@drawable/ending"
            tools:src="@drawable/ending" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="418dp"
        android:layout_height="42dp"
        android:background="#000000"
        android:gravity="center"
        android:text="CHECK IN Dashboard"
        android:textColor="#FFE55C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />
</androidx.constraintlayout.widget.ConstraintLayout>